rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isStudent() {
      return getUserData().role == 'student';
    }

    function isLecturer() {
      return getUserData().role == 'lecturer';
    }

    function isAdmin() {
      return getUserData().role == 'admin';
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Anyone authenticated can read user profiles (needed for displaying names/avatars)
      allow read: if isAuthenticated();
      // Users can update their own data, except 'role', 'isVerified', and 'status'
      // Admins can update everything
      allow create: if isAuthenticated() && isOwner(userId); // Creation happens on register
      allow update: if (isAuthenticated() && isOwner(userId) && 
                        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isVerified', 'status'])) 
                    || (isAuthenticated() && isAdmin());
      allow delete: if isAuthenticated() && isAdmin();
    }

    // --- Projects Collection (Student Uploads) ---
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      // Only students can create
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      // Owner, Supervisor, or Admin can update
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        isAdmin() ||
        resource.data.supervisorId == request.auth.uid || 
        // Allow strict update of verification fields by any lecturer if they are the verifier
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'verifiedBy', 'verifiedAt', 'lecturerFeedback']) && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'lecturer'
        )
      );
      // Owner or Admin can delete
      allow delete: if isAuthenticated() && (resource.data.studentId == request.auth.uid || isAdmin());
    }

    // --- Notifications Collection ---
    match /notifications/{notificationId} {
      // Allow reading if the document belongs to the user (recipient)
      allow read: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid || 
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      // Allow update (mark read) if owner
      allow update: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid || 
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      // Anyone authenticated can delete their own notifications
      allow delete: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid || 
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      // Anyone authenticated can send a notification
      allow create: if isAuthenticated();
    }

    // --- Publications Collection (Lecturer Research) ---
    match /publications/{pubId} {
      allow read: if isAuthenticated();
      // Only lecturers can create/edit their publications
      allow create: if isAuthenticated() && isLecturer() && request.resource.data.lecturerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.lecturerId == request.auth.uid || isAdmin());
    }

    // --- Supervision Requests ---
    match /supervision_requests/{requestId} {
      // Students can read their own requests, Lecturers can read requests sent to them
      allow read: if isAuthenticated() && (resource.data.studentId == request.auth.uid || resource.data.lecturerId == request.auth.uid);
      // Students create requests
      allow create: if isAuthenticated() && isStudent() && request.resource.data.studentId == request.auth.uid;
      // Lecturers can update status (accept/decline)
      allow update: if isAuthenticated() && (resource.data.lecturerId == request.auth.uid || resource.data.studentId == request.auth.uid);
    }

    // --- Saved Items (Bookmarks) ---
    match /saved_items/{itemId} {
      allow read, write: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
    }

    // --- Verification Requests (Admin) ---
    match /verification_requests/{requestId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && isLecturer() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && isAdmin();
    }

    // --- Reports (Content Moderation) ---
    match /reports/{reportId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAuthenticated() && isAdmin();
    }
  }
}